<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ShowBitmapListActivity">

    <TextView
        android:id="@+id/text_show_switch_conversion"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_show_bitmap_list_switch"
        android:text="显示转换文本"
        android:paddingLeft="10dp"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch_conversion_list_and_grid"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:text="Switch"
        android:textOff="@string/text_swtich_grid_view"
        android:textOn="@string/text_switch_list_view"
        app:layout_constraintBottom_toBottomOf="@+id/text_show_switch_conversion"
        app:layout_constraintEnd_toEndOf="@+id/text_show_switch_conversion"
        app:layout_constraintTop_toTopOf="@+id/text_show_switch_conversion" />

    <FrameLayout
        android:id="@+id/layout_fragment_list_and_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_show_switch_conversion">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>